<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutStore"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/cbStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:button="@null"
    	android:layout_marginStart="16dp"
        android:drawableStart="@drawable/selector_checkbox_car" />

    <ImageView
        android:id="@+id/ivStoreIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/cbStore"
        android:layout_marginStart="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/shop_icon" />

    <TextView
        android:id="@+id/tvStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/ivStoreIcon"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@id/tvStoreName"
        android:src="@drawable/next" />

    <CheckBox
        android:id="@+id/cbEdit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:clickable="true"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="编辑"
        android:button="@null"
        android:textColor="@color/black"/>

</RelativeLayout>